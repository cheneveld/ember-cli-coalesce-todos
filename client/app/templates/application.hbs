<nav class="navbar navbar-default" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header"><p class="navbar-brand">Coalesce Ember CLI ToDo</p></div>
		<button {{action 'flush'}} class="btn btn-primary navbar-btn navbar-right">Flush</button>
	</div>
</nav>

<div class="row">

	<div class="col-md-4">

		<h1>Users</h1>

		<form>
			{{input value=name placeholder="name"}}
			<button {{action 'addUser'}}>Add</button>
		</form>

		<ul>
			{{#each itemController="user"}}
				<li>{{link-to name 'todos.index' this}} <button {{action "removeUser"}}>X</button></li>
			{{/each}}
		</ul>
	</div>

	<div class="col-md-8">
		{{outlet}}
	</div>

</div>
